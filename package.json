{
  "name": "dazzler",
  "version": "1.0.0",
  "description": "Yet another ui-kit",
  "private": true,
  "workspaces": {
    "packages": [
      "config/**",
      "packages/**",
      "utils/**",
      "examples/**",
      "lib/**"
    ],
    "nohoist": [
      "**/jest",
      "**/ts-node",
      "**/@dazzler/eslint-*",
      "**/@dazzler/prettier-*"
    ]
  },
  "scripts": {
    "dev": "yarn run clear && yarn run bootstrap && yarn run build",
    "üî•": "----------------------------------------",
    "bootstrap": "yarn install && yarn run lerna:bootstrap",
    "lerna:bootstrap": "lerna bootstrap",
    "üó≥Ô∏è": "----------------------------------------",
    "build": "yarn run build:utils && yarn run build:components",
    "build:utils": "lerna run build --scope @dazzler/utils-*",
    "build:components": "lerna run build --ignore @dazzler/utils-* --ignore @dazzler/example-* --ignore @dazzler/dazzler --ignore @dazzler/dazzler-*",
    "build:lib": "lerna run build --scope @dazzler/dazzler --scope @dazzler/dazzler-*",
    "üßπ": "----------------------------------------",
    "clear": "yarn run clean:src && yarn run clean:lock && yarn run clean:node_modules",
    "clean:lock": "rimraf ./**/package-lock.json && rimraf ./**/yarn.lock",
    "clean:src": "rimraf ./**/src/**/**.js ./**/src/**/**.js.map ./**/src/**/**.d.ts",
    "clean:node_modules": "rimraf ./**/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pan-alexey/dazzler.git"
  },
  "author": "Pan Alexey [pan-alexey@live.com]",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pan-alexey/dazzler/issues"
  },
  "homepage": "https://github.com/pan-alexey/dazzler#readme",
  "dependencies": {
    "lerna": "^5.5.4"
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  }
}
