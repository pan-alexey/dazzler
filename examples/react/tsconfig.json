{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "lib": [
        "dom",
        "dom.iterable",
        "esnext"
    ],
    "types": [
      "node",
      "jest",
      "webpack/module",
      "@testing-library/jest-dom"
    ],
  },
  "include": ["src"],
  "files": [
    "./src/main.d.ts",
    "./src/main.tsx",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
