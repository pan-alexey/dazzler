{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "lib": [
        "dom",
        "dom.iterable",
        "esnext"
    ],
    "types": [
      "node",
      "jest",
      "webpack/module"
    ],
  },
  "files": [
    "./src/index.d.ts",
    "./src/index.tsx",
  ],
}
